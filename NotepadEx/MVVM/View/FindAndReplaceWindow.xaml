<Window x:Class="NotepadEx.MVVM.View.FindAndReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotepadEx.MVVM.View"
        xmlns:UserControls="clr-namespace:NotepadEx.MVVM.View.UserControls"
        mc:Ignorable="d"
        Title="FindAndReplace" Height="280" Width="550"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Grid Margin="10" Background="{DynamicResource Color_ToolWindowBg}">
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <UserControls:CustomTitleBar x:Name="TitleBar" Grid.ColumnSpan="4" DataContext="{Binding TitleBarViewModel}"/>

        <!-- Find Section -->
        <Label Content="Find:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" 
               Foreground="{DynamicResource Color_ToolWindowFont}" Margin="5,5,5,5"/>
        <TextBox x:Name="FindTextBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" 
                 Margin="5,5,5,5" Height="25" TextChanged="FindTextBox_TextChanged"/>
        <StackPanel Grid.Row="1" Grid.Column="3" Orientation="Horizontal">
            <Button x:Name="FindPreviousButton" Content="◄" Width="30" Height="25"
                    Margin="5,5,2,5" Click="FindPreviousButton_Click" 
                    ToolTip="Find Previous (Shift+F3)"/>
            <Button x:Name="FindNextButton" Content="►" Width="30" Height="25"
                    Margin="2,5,5,5" Click="FindNextButton_Click" 
                    ToolTip="Find Next (F3)"/>
        </StackPanel>

        <!-- Replace Section -->
        <Label Content="Replace:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" 
               Foreground="{DynamicResource Color_ToolWindowFont}" Margin="5,5,5,5"/>
        <TextBox x:Name="ReplaceTextBox" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                 Margin="5,5,5,5" Height="25"/>
        <StackPanel Grid.Row="2" Grid.Column="3" Orientation="Horizontal">
            <Button x:Name="ReplaceButton" Content="Replace" Width="70" Height="25"
                    Margin="5,5,5,5" Click="ReplaceButton_Click"/>
        </StackPanel>

        <!-- Status Bar -->
        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" 
                Background="{DynamicResource Color_InfoBarBg}"
                BorderBrush="{DynamicResource Color_BorderColor}"
                BorderThickness="1" Margin="5,5,5,5" Height="30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="StatusText" Grid.Column="0" 
                           Foreground="{DynamicResource Color_InfoBarFg}"
                           VerticalAlignment="Center" Margin="8,0,0,0"
                           FontSize="11" Text="Ready"/>
                <TextBlock x:Name="MatchCountText" Grid.Column="1"
                           Foreground="{DynamicResource Color_InfoBarFg}"
                           VerticalAlignment="Center" Margin="0,0,8,0"
                           FontSize="11" FontWeight="SemiBold" Text=""/>
            </Grid>
        </Border>

        <!-- Options -->
        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" 
                    Orientation="Horizontal" Margin="5,5,5,5">
            <CheckBox x:Name="MatchCaseCheckBox" Content="Match case" 
                      Foreground="{DynamicResource Color_ToolWindowFont}"
                      Margin="5,0,15,0" Checked="SearchOption_Changed" Unchecked="SearchOption_Changed"/>
            <CheckBox x:Name="MatchWholeWordCheckBox" Content="Match whole word" 
                      Foreground="{DynamicResource Color_ToolWindowFont}"
                      Margin="0,0,15,0" Checked="SearchOption_Changed" Unchecked="SearchOption_Changed"/>
            <CheckBox x:Name="UseRegexCheckBox" Content="Use regular expressions" 
                      Foreground="{DynamicResource Color_ToolWindowFont}"
                      Margin="0,0,15,0" Checked="SearchOption_Changed" Unchecked="SearchOption_Changed"/>
            <CheckBox x:Name="WrapAroundCheckBox" Content="Wrap around" 
                      Foreground="{DynamicResource Color_ToolWindowFont}"
                      IsChecked="True" Margin="0,0,5,0"/>
        </StackPanel>

        <!-- Match List -->
        <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4" 
                BorderBrush="{DynamicResource Color_BorderColor}"
                BorderThickness="1" Margin="5,5,5,5" Height="60">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="MatchesListBox" Background="{DynamicResource Color_ToolWindowBg}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{DynamicResource Color_BorderColor}" 
                                    BorderThickness="0,0,0,1" Padding="5,3">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Location}" 
                                               Foreground="{DynamicResource Color_MenuItemFg}"
                                               FontSize="10" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Preview}" 
                                               Foreground="{DynamicResource Color_ToolWindowFont}"
                                               FontSize="10" TextTrimming="CharacterEllipsis"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4" 
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,5,5,10">
            <Button x:Name="FindAllButton" Content="Find All" Width="80" Height="25"
                    Margin="0,0,5,0" Click="FindAllButton_Click"/>
            <Button x:Name="ReplaceAllButton" Content="Replace All" Width="80" Height="25"
                    Margin="0,0,5,0" Click="ReplaceAllButton_Click"/>
            <Button x:Name="ClearHighlightsButton" Content="Clear Highlights" Width="100" Height="25"
                    Margin="0,0,5,0" Click="ClearHighlightsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>